<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eduhern.dbquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8" 
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.eduhern.dbquiz.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.eduhern.dbquiz.activity.QuestionActivity"
            android:label="@string/title_activity_question"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="com.eduhern.dbquiz.activity.ResultadoActivity"
            android:label="@string/title_activity_resultado"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="com.eduhern.dbquiz.activity.AyudaActivity"
            android:label="@string/title_activity_ayuda" >
        </activity>
        <activity
            android:name="com.eduhern.dbquiz.activity.CreditosActivity"
            android:label="@string/title_activity_creditos" >
        </activity>
    </application>

</manifest>